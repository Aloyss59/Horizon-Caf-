# Clé secrète JWT - CHANGEZ-LA !
JWT_SECRET=dev-secret-key-here

# URL du frontend
FRONTEND_URL=http://localhost:3000

# Configuration Email (optionnel)
EMAIL_USER=your-gmail@gmail.com
